mkdir -p \
  /var/cache/rad \
  /var/lib/rad/repo

ln -fs $PWD/core /var/lib/rad/repo
ln -fs $PWD/log /var/log/rad
ln -fs $PWD/src /var/cache/rad
ln -fs $PWD/tmp /var/tmp/rad

for i in \
a2x asciidoc \
gtkdocize \
help2man \
ldconfig \
makeinfo \
po4a \
texi2dvi texi2pdf \
yodl2man; do
  cp -fPp core/musl/files/true /usr/bin/$i
done

cd live

./bootstrap-nim

cd ../rad

./nim rad.nim

./rad bootstrap 1
./rad bootstrap 2

cd ../live

./img

./mount
./umount

echo "bootstrap complete"
